<div class="container">
  <h1>Cocktails</h1>
  <% @cocktails.each do |cocktail| %>

    <div class="card" style="width: 18rem;">
      <%= cl_image_tag cocktail.photo.key, alt: 'Drink picture', class: 'card-img-top' %>
      <%# <img src="..." class="card-img-top" alt="..."> %>
      <div class="card-body">
        <%= link_to cocktail.name, cocktail_path(cocktail), class: 'custom-card-title' %>
        <%= link_to "+ dose", new_cocktail_dose_path(cocktail) %>
      </div>
    </div>

  <% end %>
</div>
